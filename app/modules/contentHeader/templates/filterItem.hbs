{{!-- default (no type) --}}
{{#unless type}} 
  <button data-event="{{eventName}}">
    <i class="fa {{#if icon}}{{icon}}{{else}}fa-chevron-right{{/if}}"></i>
    {{buttonText}}
  </button>
{{/unless}}
{{!-- toggle --}}
{{#ifValueEquals type 'toggle'}}
  <input type="checkbox" id="{{eventName}}" {{#if checked}}checked{{/if}} />
  <label for="{{eventName}}">{{buttonText}}</label>
{{/ifValueEquals}}
{{!-- search --}}
{{#ifValueEquals type 'search'}}
  <div class="label">{{buttonText}}</div>
  <input type="text" placeholder="{{placeholder}}">
{{/ifValueEquals}}
{{!-- tags --}}
{{#ifValueEquals type 'tags'}}
  <div class="label">{{buttonText}}</div>
  <div class="tags">
    {{#if ../tags.length}}
      {{#each ../tags}}
        <span class="tag" data-value="{{_id}}">{{title}}</span>
      {{/each}}
    {{else}}
      {{t 'app.notags'}}
    {{/if}}
  </div>
{{/ifValueEquals}}