  <div class="groups">
  {{#each groups}}
    <div class="group" data-id="{{id}}">
      {{#if name}}
        <div class="name">
          <h3>{{name}}</h3>
        </div>
      {{/if}}
      <div class="items">
        {{#each items}}
          <div class="item {{itemClass}}" data-group="{{@../index}}" data-item="{{@index}}" data-event="{{eventName}}">{{{itemHtml}}}</div>
        {{/each}}
      </div>
    </div>
  {{/each}}
  </div>